#Problema 57:
mi_lista = [15, 8, 23, 42, 4, 16, 8, 15, 9, 10]

print(f"Lista a buscar:")
print(f"   {mi_lista}")
print(f"   ‚Ä¢ Tama√±o: {len(mi_lista)} elementos")
print(f"   ‚Ä¢ √çndices: 0 a {len(mi_lista)-1}")


try:
    valor_buscar = float(input(f"\nüîé Ingresa el valor a buscar: "))
    # Si es entero, lo mostramos como entero
    if valor_buscar.is_integer():
        valor_buscar = int(valor_buscar)
except ValueError:
    print(" Debes ingresar un n√∫mero v√°lido")
    exit()


print(f"\n Buscando el valor {valor_buscar}...")

encontrado = False
posicion = -1

for i in range(len(mi_lista)):
    if mi_lista[i] == valor_buscar:
        encontrado = True
        posicion = i
        break 


print("\n" + "=" * 50)
if encontrado:
    print(f" ¬°VALOR ENCONTRADO!")
    print(f"   ‚Ä¢ El valor {valor_buscar} est√° en la posici√≥n {posicion}")
    print(f"   ‚Ä¢ mi_lista[{posicion}] = {mi_lista[posicion]}")
else:
    print(f" El valor {valor_buscar} NO est√° en la lista")
print("=" * 50)